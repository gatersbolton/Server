.v1{
  width: 100%;
  height: 100%;
}
/* logo区域 */
.v1 .logo{
  display: flex;
  justify-content: center;
  align-items:center;
  margin-left: 10%;
}
.v1 .title{
  font-size: xx-large;
  display: flex;
  justify-content: center;
  align-items:center;
  margin-top: 0.5cm;
}



.form-group {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  flex-direction: row;
  margin-left: 0.5cm;
  margin-top: 0.8cm;
}

.label {
  width: 80px;
  font-size: 16px;
  font-weight: bold;
  margin-right: 20px;
}

.checkbox-group {
  display: flex;
  flex-grow: 1;
  flex-direction: row;
  justify-content: center;
}

.checkbox-group checkbox {
  margin-right: 20px;
}

.content {
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.picker {
  font-size: 16px;
  width: 150px;
}

.input {
  font-size: 16px;
  border: none;
  padding: 10px;
  width: 80px;
  margin-left: 20px;
}

.underline {
  width: 80px;
  height: 1px;
  background-color: #ccc;
  margin-left: 20px;
}

.form-buttons {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 0.8cm;
}

.btn {
  font-size: 16px;
  padding: 10px 20px;
  margin-right: 10px;
  border: 1px solid #ccc;
}