/* 最大的父元素 */
.v1{
  width: 100%;
  height: 100%;
}
/* logo区域 */
.v1 .logo{
  display: flex;
  justify-content: center;
  align-items:center;
  margin-left: 10%;
}

.v1 .title{
  font-size: xx-large;
  display: flex;
  justify-content: center;
  align-items:center;
  margin-top: 0.5cm;
}
.v1 .v2{
  display:block;
  justify-content: center;
  align-items:center;
}

.inputType{
  margin-top: 1.2cm;
  margin-left: 1.5cm;
  display: flex;
  font-size: x-large;
  align-items: baseline;
}

   
.inputType .imageStyle{
  margin-left: 0.3cm;
  width: 50rpx;
  height: 50rpx;
  align-items: baseline;
}



.flex-wrp{
  width: 100%;
}
.v2 .inputValue{
  border-radius: 10rpx;
  width: 50%;
  border-radius: 10rpx;
  height: 30px;
  min-height: 30px;
  padding-left: 20rpx;
  font-size: large;
  font-weight: 100;
  border-bottom: 3rpx solid rgb(58, 57, 57);
  
}
.btn{
  margin-top: 0.5cm;
}
.btn .btn_cancel{
  margin-top: 0.8cm;
}